.container{
  position: relative;
}
.mask{
  position: absolute;
  left:0;
  top:0;
  bottom:0;
  right: 0;
  background:#fff;
  z-index:50;
}
.login-box{
  width:100%;
  height:100%;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.login-box input{
  border:1px solid #3B9DFA;
  margin-bottom: 30rpx;
  height:80rpx;
  border-radius:40rpx;
  width:80%;
  padding-left:40rpx;
  margin:0 auto 30rpx auto;
  font-size: 30rpx;
}
.login{
  border:1px solid #3B9DFA;
  height:80rpx;
  font-size: 30rpx;
  border-radius:40rpx;
  color:#fff;
  width:80%;
  background-color: #3B9DFA;
}
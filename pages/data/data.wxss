/* pages/data/data.wxss */

.container {
  background: #353d45;
  padding-top: 60rpx;
}

.tabbar {
  background-color: #efefef;
  display: flex;
  flex-direction: row;
  padding: 0 20rpx;
  font-size: 30rpx;
  padding-bottom: 4rpx;
  color: #666;
  z-index: 10;
}

.tabbar.fixedTab {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.tabbar .tabItem {
  margin-right: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.tabbar .tabItem.active {
  color: #3b9dfa;
  border-bottom: 4rpx solid #3b9dfa;
}

.tabView {
  padding: 20rpx;
  color: #fff;
}

.tabView-title {
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  border-bottom: 2rpx solid #2f373e;
  padding: 10rpx 0;
}

.tabView-title view {
  text-align: left;
}

.tabView-content {
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
  border-bottom: 2rpx solid #2f373e;
  padding: 10rpx 0;
  align-items: center;
}

.tabView-content view {
  text-align: left;
}

.group-name {
  font-size: 22rpx;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #2f373e;
}
